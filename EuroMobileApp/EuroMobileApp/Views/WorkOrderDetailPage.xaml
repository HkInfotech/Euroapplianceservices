                                        HeightRequest="1"
                                        Color="{DynamicResource grayMedium}" />
                                    <Label
                                        FontAttributes="Bold"
                                        IsVisible="{Binding JobNature.Valid}"
                                        Style="{StaticResource ValidationErrorLabelStyle}"
                                        Text="{Binding JobNature.Errors, Converter={StaticResource ValidationErrorConverter}}"
