                                        Style="{StaticResource ValidationErrorLabelStyle}"
                                        Text="{Binding CodorWarNumber.Errors, Converter={StaticResource ValidationErrorConverter}}"
                                        TextColor="{DynamicResource IndianRed}" />

                                </StackLayout>

                                <!--  Milage  -->
                                <StackLayout Margin="10,0,10,0" Spacing="0">
                                    <Label
                                        FontFamily="{DynamicResource RobotoCondensedBold}"
                                        FontSize="14"
                                        TextColor="{DynamicResource grayDark}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{trans:Translate MileageLabel}" />
                                                <Span Text=" *" TextColor="{DynamicResource IndianRed}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <control:BorderlessEntry
                                        Grid.Column="0"
                                        FontFamily="{StaticResource RobotoCondensedRegular}"
                                        FontSize="16"
                                        Keyboard="Text"
                                        Placeholder="{trans:Translate MileagePlaceHolder}"
                                        PlaceholderColor="{DynamicResource grayMedium}"
                                        Text="{Binding Mileage.Value}"
                                        VerticalOptions="Center">
                                        <control:BorderlessEntry.Behaviors>
                                            <prism:EventToCommandBehavior Command="{Binding ValidateMileageCommand}" EventName="TextChanged" />
                                        </control:BorderlessEntry.Behaviors>
                                    </control:BorderlessEntry>
                                    <BoxView
                                        Margin="0"
                                        HeightRequest="1"
                                        Color="{DynamicResource grayMedium}" />
                                    <Label
                                        FontAttributes="Bold"
                                        IsVisible="{Binding Mileage.Valid}"
                                        Style="{StaticResource ValidationErrorLabelStyle}"
                                        Text="{Binding Mileage.Errors, Converter={StaticResource ValidationErrorConverter}}"
                                        TextColor="{DynamicResource IndianRed}" />

                                </StackLayout>



                                <!--  Note  -->

                                <StackLayout Margin="10,0,10,0" Spacing="0">
                                    <Label
                                        FontFamily="{DynamicResource RobotoCondensedBold}"
                                        FontSize="14"
                                        TextColor="{DynamicResource grayDark}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{trans:Translate NoteLabel}" />
                                                <Span Text=" *" TextColor="{DynamicResource IndianRed}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <control:BorderLessEditor
                                        Grid.Column="0"
                                        AutoSize="TextChanges"
                                        BackgroundColor="{DynamicResource tabBackground}"
                                        FontFamily="{StaticResource RobotoCondensedRegular}"
                                        FontSize="16"
                                        IsSpellCheckEnabled="True"
                                        IsTextPredictionEnabled="True"
                                        Placeholder="{trans:Translate NotePlaceHolder}"
                                        PlaceholderColor="{DynamicResource grayMedium}"
                                        Text="{Binding OrderNote.Value}"
                                        VerticalOptions="Center">
                                        <control:BorderLessEditor.Behaviors>
                                            <prism:EventToCommandBehavior Command="{Binding ValidateOrderNoteCommand}" EventName="TextChanged" />
                                        </control:BorderLessEditor.Behaviors>
                                    </control:BorderLessEditor>
                                    <BoxView
                                        Margin="0"
                                        HeightRequest="1"
                                        Color="{DynamicResource grayMedium}" />
                                    <Label
                                        FontAttributes="Bold"
                                        IsVisible="{Binding OrderNote.Valid}"
                                        Style="{StaticResource ValidationErrorLabelStyle}"
                                        Text="{Binding OrderNote.Errors, Converter={StaticResource ValidationErrorConverter}}"
                                        TextColor="{DynamicResource IndianRed}" />

                                </StackLayout>
                            </StackLayout>


                            <ScrollView.Triggers>
                                <DataTrigger
                                    Binding="{Binding PositionSelected}"
                                    TargetType="ScrollView"
                                    Value="1">
                                    <Setter Property="IsVisible" Value="true" />
                                </DataTrigger>
                            </ScrollView.Triggers>
                        </ScrollView>
                        <!--#endregion-->
                        <!--#region Services Tab Area-->
                        <ScrollView IsVisible="false">
                            <StackLayout BindableLayout.ItemsSource="{Binding WorkOrderServices}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Margin="5" Padding="5">
                                            <StackLayout Margin="10,0,10,0" Spacing="0">
                                                <Grid ColumnDefinitions="70*,auto,30*" ColumnSpacing="0">
                                                    <StackLayout Grid.Row="0" Grid.Column="0">
                                                        <Label Text="{Binding ServiceItem}" VerticalOptions="CenterAndExpand" />
                                                    </StackLayout>
                                                    <StackLayout Grid.Column="1">
                                                        <BoxView
                                                            Grid.Column="1"
                                                            Margin="5"
                                                            WidthRequest="1"
                                                            Color="{DynamicResource grayMedium}" />
                                                    </StackLayout>

                                                    <StackLayout
                                                        Grid.Row="0"
                                                        Grid.Column="2"
                                                        Margin="0"
                                                        Padding="0"
                                                        Spacing="0">
                                                        <control:BorderlessEntry
                                                            HorizontalTextAlignment="End"
                                                            Keyboard="Numeric"
                                                            Text="{Binding ServiceItemPrice}"
                                                            VerticalOptions="CenterAndExpand" />
                                                    </StackLayout>
                                                    <StackLayout Grid.Column="3" Orientation="Horizontal">
                                                        <Label
                                                            FontSize="16"
                                                            Text="$"
                                                            VerticalOptions="Center" />
                                                        <BoxView
                                                            Grid.Column="1"
                                                            Margin="5"
                                                            WidthRequest="1"
                                                            Color="{DynamicResource grayMedium}" />
                                                    </StackLayout>
                                                    <!--<StackLayout
                                                        Grid.Row="0"
                                                        Grid.Column="4"
                                                        Margin="0"
                                                        Padding="0"
                                                        Spacing="0">
                                                        <control:BorderLessEditor
                                                            Keyboard="Text"
                                                            Text="{Binding ServiceItemDescr}"
                                                            VerticalOptions="CenterAndExpand" />
                                                    </StackLayout>-->
                                                </Grid>

                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>

                            <ScrollView.Triggers>
                                <DataTrigger
                                    Binding="{Binding PositionSelected}"
                                    TargetType="ScrollView"
                                    Value="2">
                                    <Setter Property="IsVisible" Value="true" />
                                </DataTrigger>
                            </ScrollView.Triggers>
                        </ScrollView>


                        <!--#endregion-->

                        <!--#region Parts Tab Area-->
                        <StackLayout IsVisible="false">
                            <Grid RowDefinitions="Auto,*">
                                <Yummy:PancakeView
                                    Grid.Row="0"
                                    Margin="0,0,10,0"
                                    Padding="10"
                                    BackgroundColor="{DynamicResource WhiteColor}"
                                    CornerRadius="15"
                                    HorizontalOptions="End"
                                    IsClippedToBounds="True">
                                    <StackLayout Orientation="Horizontal">
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span
                                                        FontFamily="{StaticResource FontAwesomeIconSolid}"
                                                        FontSize="Small"
                                                        Text="{x:Static Icons:IconFonts.Plus}" />
                                                    <Span Text="   " />
                                                    <Span FontFamily="{StaticResource RobotoCondensedBold}" Text="{trans:Translate AddNewButtonLabel}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>
                                    <Yummy:PancakeView.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding NavigatePartDetailPopUpCommand}" />
                                    </Yummy:PancakeView.GestureRecognizers>
                                </Yummy:PancakeView>

                                <CollectionView
                                    Grid.Row="1"
                                    Margin="15,0,15,0"
                                    HorizontalOptions="FillAndExpand"
                                    ItemTemplate="{StaticResource WorkOrderPartTemplate}"
                                    ItemsSource="{Binding WorkOrderParts}"
                                    SelectionMode="None"
                                    VerticalOptions="FillAndExpand">
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                                    </CollectionView.ItemsLayout>
                                </CollectionView>
                            </Grid>
                            <StackLayout.Triggers>
                                <DataTrigger
                                    Binding="{Binding PositionSelected}"
                                    TargetType="StackLayout"
                                    Value="3">
                                    <Setter Property="IsVisible" Value="true" />
                                </DataTrigger>
                            </StackLayout.Triggers>
                        </StackLayout>
                        <!--#endregion-->

                        <!--#region Remarks Tab Area-->
                        <StackLayout IsVisible="false">
                            <StackLayout Margin="10,0,10,0" Spacing="0">
                                <Label
                                    FontFamily="{DynamicResource RobotoCondensedBold}"
                                    FontSize="14"
                                    TextColor="{DynamicResource grayDark}">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{trans:Translate TechRemarksLabel}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <control:BorderLessEditor
                                    Grid.Column="0"
                                    AutoSize="TextChanges"
                                    BackgroundColor="{DynamicResource tabBackground}"
                                    FontFamily="{StaticResource RobotoCondensedRegular}"
                                    FontSize="16"
                                    IsSpellCheckEnabled="True"
                                    IsTextPredictionEnabled="True"
                                    Placeholder="{trans:Translate TechRemarksPlaceHolder}"
                                    PlaceholderColor="{DynamicResource grayMedium}"
                                    Text="{Binding TechRemarksNote.Value}"
                                    VerticalOptions="Center">
                                    <control:BorderLessEditor.Behaviors>
                                        <prism:EventToCommandBehavior Command="{Binding ValidateTechRemarksNoteCommand}" EventName="TextChanged" />
                                    </control:BorderLessEditor.Behaviors>
                                </control:BorderLessEditor>
                                <BoxView
                                    Margin="0"
                                    HeightRequest="1"
                                    Color="{DynamicResource grayMedium}" />
