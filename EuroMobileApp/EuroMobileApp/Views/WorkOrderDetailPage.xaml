                                        Style="{StaticResource ValidationErrorLabelStyle}"
                                        Text="{Binding ServiceTIme.Errors, Converter={StaticResource ValidationErrorConverter}}"
                                        TextColor="{DynamicResource IndianRed}" />

                                </StackLayout>

                                <!--  Job Nature  -->
                                <StackLayout Margin="10,0,10,0" Spacing="0">
                                    <Label
                                        FontFamily="{DynamicResource RobotoCondensedBold}"
                                        FontSize="14"
                                        TextColor="{DynamicResource grayDark}">
