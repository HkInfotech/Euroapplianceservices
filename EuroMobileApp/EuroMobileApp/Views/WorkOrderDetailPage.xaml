                                        </Yummy:PancakeView.GestureRecognizers>
                                    </Yummy:PancakeView>


                                    <BoxView
                                        Margin="0"
                                        HeightRequest="1"
                                        Color="{DynamicResource grayMedium}" />
                                    <Label
                                        FontAttributes="Bold"
                                        IsVisible="{Binding Technician.Valid}"
                                        Style="{StaticResource ValidationErrorLabelStyle}"
                                        Text="{Binding Technician.Errors, Converter={StaticResource ValidationErrorConverter}}"
                                        TextColor="{DynamicResource IndianRed}" />

                                </StackLayout>
                                <!--  Job Status  -->
                                <StackLayout Margin="10,0,10,0" Spacing="0">
                                    <Label
                                        FontFamily="{DynamicResource RobotoCondensedBold}"
                                        FontSize="14"
                                        TextColor="{DynamicResource grayDark}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{trans:Translate JobStatusLabel}" />
                                                <Span Text=" *" TextColor="{DynamicResource IndianRed}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Yummy:PancakeView>
                                        <control:BorderlessEntry
                                            Grid.Column="0"
                                            FontFamily="{StaticResource RobotoCondensedRegular}"
                                            FontSize="16"
                                            InputTransparent="True"
                                            Keyboard="Text"
                                            Placeholder="{trans:Translate JobStatusPlaceHolder}"
                                            PlaceholderColor="{DynamicResource grayMedium}"
                                            Text="{Binding JobStatus.Value}"
                                            VerticalOptions="Center" />
                                        <Yummy:PancakeView.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding ValidateJobStatusCommand}" />
                                        </Yummy:PancakeView.GestureRecognizers>
                                    </Yummy:PancakeView>


                                    <BoxView
                                        Margin="0"
                                        HeightRequest="1"
                                        Color="{DynamicResource grayMedium}" />
                                    <Label
                                        FontAttributes="Bold"
                                        IsVisible="{Binding JobStatus.Valid}"
                                        Style="{StaticResource ValidationErrorLabelStyle}"
                                        Text="{Binding JobStatus.Errors, Converter={StaticResource ValidationErrorConverter}}"
                                        TextColor="{DynamicResource IndianRed}" />

                                </StackLayout>

                                <!--  Ticket Number  -->
                                <StackLayout Margin="10,0,10,0" Spacing="0">
                                    <Label
                                        FontFamily="{DynamicResource RobotoCondensedBold}"
                                        FontSize="14"
                                        TextColor="{DynamicResource grayDark}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{trans:Translate TicketNumberLabel}" />
                                                <Span Text=" *" TextColor="{DynamicResource IndianRed}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <control:BorderlessEntry
                                        FontFamily="{StaticResource RobotoCondensedRegular}"
                                        FontSize="16"
                                        Keyboard="Numeric"
                                        Placeholder="{trans:Translate TicketNumberPlaceHolder}"
                                        PlaceholderColor="{DynamicResource grayMedium}"
                                        Text="{Binding TicketNumber.Value}"
                                        VerticalOptions="Center">
                                        <control:BorderlessEntry.Behaviors>
                                            <prism:EventToCommandBehavior Command="{Binding ValidateTicketNumberCommand}" EventName="TextChanged" />
                                        </control:BorderlessEntry.Behaviors>
                                    </control:BorderlessEntry>
                                    <BoxView
                                        Margin="0"
                                        HeightRequest="1"
                                        Color="{DynamicResource grayMedium}" />
                                    <Label
                                        FontAttributes="Bold"
                                        IsVisible="{Binding TicketNumber.Valid}"
                                        Style="{StaticResource ValidationErrorLabelStyle}"
                                        Text="{Binding TicketNumber.Errors, Converter={StaticResource ValidationErrorConverter}}"
                                        TextColor="{DynamicResource IndianRed}" />

                                </StackLayout>

                                <!--  COD OR WAR NUMBER  -->
                                <StackLayout Margin="10,0,10,0" Spacing="0">
                                    <Label
                                        FontFamily="{DynamicResource RobotoCondensedBold}"
                                        FontSize="14"
                                        TextColor="{DynamicResource grayDark}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{trans:Translate CODWARLable}" />
                                                <Span Text=" *" TextColor="{DynamicResource IndianRed}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <control:BorderlessEntry
                                        Grid.Column="0"
                                        FontFamily="{StaticResource RobotoCondensedRegular}"
                                        FontSize="16"
                                        Keyboard="Text"
                                        Placeholder="{trans:Translate CODWARPlaceHolder}"
                                        PlaceholderColor="{DynamicResource grayMedium}"
                                        Text="{Binding CodorWarNumber.Value}"
                                        VerticalOptions="Center">
                                        <control:BorderlessEntry.Behaviors>
                                            <prism:EventToCommandBehavior Command="{Binding ValidateCodorWarNumberCommand}" EventName="TextChanged" />
