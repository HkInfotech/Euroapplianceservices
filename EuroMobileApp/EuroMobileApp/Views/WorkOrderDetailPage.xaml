                                            FontSize="16"
                                            InputTransparent="True"
                                            Keyboard="Text"
                                            Placeholder="{trans:Translate JobNaturePlaceHolder}"
                                            PlaceholderColor="{DynamicResource grayMedium}"
                                            Text="{Binding JobNature.Value}"
                                            VerticalOptions="Center" />
                                        <Yummy:PancakeView.GestureRecognizers>
